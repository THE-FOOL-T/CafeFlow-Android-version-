<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.CafeFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/text_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_button</item>
        <item name="colorSecondaryVariant">@color/secondary_button</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- This is the correct fix for the hamburger icon -->
        <item name="drawerArrowStyle">@style/App.DrawerArrowStyle</item>

        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.CafeFlow.Toolbar</item>
    </style>

    <!-- Style for the hamburger icon -->
    <style name="App.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="Widget.CafeFlow.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.CafeFlow.Toolbar</item>
    </style>

    <style name="ThemeOverlay.CafeFlow.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Custom style for the NavigationView to ensure text is visible -->
    <style name="NavigationViewTextStyle" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>